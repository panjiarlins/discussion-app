pipeline {
    agent {
        docker {
            image 'node:23-alpine3.19' 
            args '-p 3000:3000' 
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                sh 'npm run ci:test'
            }
        }
    }
}
